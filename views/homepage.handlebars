{{!-- loops posts --}}
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-12">
    <h2 class="title">
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
  </div>
  <div class="col-md-12 content">
    <p>
      {{post.content}}
    </p>
  </div>
  <div class="col-md-6"></div>
  <div class="col-md-6 date">
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}